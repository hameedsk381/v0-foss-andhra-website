generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        String     @id
  name      String
  email     String     @unique
  password  String
  role      String     @default("admin")
  avatar    String?
  lastLogin DateTime?
  createdAt DateTime   @default(now())
  updatedAt DateTime
  BlogPost  BlogPost[]
}

model Analytics {
  id        String   @id
  type      String
  value     Float
  metadata  String?
  date      DateTime @default(now())
  createdAt DateTime @default(now())
}

model BlogCategory {
  id          String     @id
  name        String     @unique
  slug        String     @unique
  description String?
  createdAt   DateTime   @default(now())
  BlogPost    BlogPost[]
}

model BlogComment {
  id        String   @id
  postId    String
  name      String
  email     String
  content   String
  status    String   @default("pending")
  createdAt DateTime @default(now())
  BlogPost  BlogPost @relation(fields: [postId], references: [id], onDelete: Cascade)
}

model BlogPost {
  id                 String        @id
  title              String
  slug               String        @unique
  excerpt            String
  content            String
  coverImage         String?
  categoryId         String
  authorId           String
  status             String        @default("draft")
  views              Int           @default(0)
  featured           Boolean       @default(false)
  metaDescription    String?
  metaKeywords       String?
  ogTitle            String?
  ogDescription      String?
  ogImage            String?
  twitterCard        String?
  twitterTitle       String?
  twitterDescription String?
  twitterImage       String?
  canonicalUrl       String?
  focusKeyword       String?
  readingTime        Int?
  publishedAt        DateTime?
  createdAt          DateTime      @default(now())
  updatedAt          DateTime
  BlogComment        BlogComment[]
  Admin              Admin         @relation(fields: [authorId], references: [id])
  BlogCategory       BlogCategory  @relation(fields: [categoryId], references: [id])
  BlogPostTag        BlogPostTag[]
}

model BlogPostTag {
  id       String   @id
  postId   String
  tagId    String
  BlogPost BlogPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  BlogTag  BlogTag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([postId, tagId])
}

model BlogTag {
  id          String        @id
  name        String        @unique
  slug        String        @unique
  createdAt   DateTime      @default(now())
  BlogPostTag BlogPostTag[]
}

model Content {
  id                 String    @id
  type               String
  slug               String    @unique
  title              String
  content            String
  metaDescription    String?
  keywords           String?
  status             String    @default("draft")
  author             String
  publishedAt        DateTime?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime
  canonicalUrl       String?
  focusKeyword       String?
  ogDescription      String?
  ogImage            String?
  ogTitle            String?
  twitterCard        String?
  twitterDescription String?
  twitterImage       String?
  twitterTitle       String?
}

model Donation {
  id                String   @id
  name              String
  email             String
  phone             String
  amount            Float
  type              String
  status            String   @default("pending")
  anonymous         Boolean  @default(false)
  paymentId         String?
  razorpayOrderId   String?
  razorpaySignature String?
  program           String?
  notes             String?
  receiptUrl        String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime
}

model Event {
  id                  String         @id
  title               String
  description         String
  date                DateTime
  endDate             DateTime?
  time                String
  location            String
  type                String
  status              String         @default("upcoming")
  maxAttendees        Int?
  currentAttendees    Int            @default(0)
  program             String?
  imageUrl            String?
  createdBy           String?
  createdAt           DateTime       @default(now())
  updatedAt           DateTime
  gallery             String?
  externalTicketUrl   String?
  externalRegisterUrl String?
  Registration        Registration[]
  EventTicketType     EventTicketType[]
  EventOrder          EventOrder[]
  EventTicket         EventTicket[]
  EventPromoCode      EventPromoCode[]
}

model Inquiry {
  id        String   @id
  name      String
  email     String
  phone     String?
  subject   String
  message   String
  status    String   @default("new")
  createdAt DateTime @default(now())
  updatedAt DateTime
}

model Media {
  id           String   @id
  filename     String
  originalName String
  mimeType     String
  size         Int
  url          String
  alt          String?
  caption      String?
  uploadedBy   String
  createdAt    DateTime @default(now())
  category     String?
  description  String?
  program      String?
  tags         String?
  title        String?
  updatedAt    DateTime
}

model Member {
  id               String    @id @default(cuid())
  name             String
  email            String    @unique
  phone            String
  organization     String?
  designation      String?
  experience       String?
  interests        String?
  referral         String?
  membershipType   String    @default("FOSStar Annual")
  status           String    @default("pending")
  joinDate         DateTime  @default(now())
  expiryDate       DateTime
  paymentId        String?
  membershipId     String    @unique
  lastLogin        DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  password         String?
  avatar           String?
  address          String?
  resetToken       String?   @unique
  resetTokenExpiry DateTime?
}

model Notification {
  id        String   @id
  userId    String
  type      String
  title     String
  message   String
  link      String?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Program {
  id                String              @id
  name              String              @unique
  title             String
  description       String
  tagline           String?
  mission           String?
  color             String
  logo              String?
  status            String              @default("active")
  displayOrder      Int                 @default(0)
  createdAt         DateTime            @default(now())
  updatedAt         DateTime
  ProgramCaseStudy  ProgramCaseStudy[]
  ProgramClub       ProgramClub[]
  ProgramInitiative ProgramInitiative[]
  ProgramProject    ProgramProject[]
  ProgramRepository ProgramRepository[]
  ProgramStartup    ProgramStartup[]
  ProgramTeamMember ProgramTeamMember[]
}

model ProgramCaseStudy {
  id          String   @id
  programId   String
  title       String
  subtitle    String?
  description String
  content     String?
  imageUrl    String?
  metrics     String?
  category    String?
  order       Int      @default(0)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  Program     Program  @relation(fields: [programId], references: [id], onDelete: Cascade)
}

model ProgramClub {
  id          String   @id
  programId   String
  name        String
  location    String
  institution String
  members     Int      @default(0)
  established String
  description String?
  contact     String?
  logo        String?
  order       Int      @default(0)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  Program     Program  @relation(fields: [programId], references: [id], onDelete: Cascade)
}

model ProgramInitiative {
  id          String   @id
  programId   String
  title       String
  description String
  content     String?
  icon        String?
  category    String?
  order       Int      @default(0)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  Program     Program  @relation(fields: [programId], references: [id], onDelete: Cascade)
}

model ProgramProject {
  id           String   @id
  programId    String
  name         String
  description  String
  content      String?
  githubUrl    String?
  websiteUrl   String?
  status       String   @default("active")
  technologies String?
  stars        Int      @default(0)
  contributors Int      @default(0)
  logo         String?
  order        Int      @default(0)
  active       Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime
  Program      Program  @relation(fields: [programId], references: [id], onDelete: Cascade)
}

model ProgramRepository {
  id          String   @id
  programId   String
  name        String
  description String
  content     String?
  category    String?
  type        String?
  url         String?
  features    String?
  order       Int      @default(0)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  Program     Program  @relation(fields: [programId], references: [id], onDelete: Cascade)
}

model ProgramStartup {
  id            String   @id
  programId     String
  name          String
  description   String
  content       String?
  category      String?
  founded       String
  location      String
  teamSize      Int      @default(0)
  fundingStage  String?
  fundingAmount String?
  logo          String?
  websiteUrl    String?
  technologies  String?
  order         Int      @default(0)
  active        Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime
  Program       Program  @relation(fields: [programId], references: [id], onDelete: Cascade)
}

model ProgramTeamMember {
  id        String   @id
  programId String
  name      String
  role      String
  bio       String?
  avatar    String?
  email     String?
  linkedin  String?
  twitter   String?
  order     Int      @default(0)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime
  Program   Program  @relation(fields: [programId], references: [id], onDelete: Cascade)
}

model PushSubscription {
  id        String   @id
  userId    String?
  endpoint  String   @unique
  p256dh    String
  auth      String
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime
}

model Registration {
  id           String   @id
  eventId      String
  name         String
  email        String
  phone        String?
  organization String?
  notes        String?
  attended     Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime
  Event        Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
}

model Settings {
  id          String   @id
  key         String   @unique
  value       String
  description String?
  updatedAt   DateTime
}

model Subscriber {
  id             String    @id
  email          String    @unique
  name           String?
  status         String    @default("active")
  subscribedAt   DateTime  @default(now())
  unsubscribedAt DateTime?
}

model Volunteer {
  id           String    @id
  firstName    String
  lastName     String
  email        String    @unique
  phone        String
  skills       String
  interests    String
  availability String
  status       String    @default("pending")
  appliedAt    DateTime  @default(now())
  reviewedAt   DateTime?
  reviewedBy   String?
}

model EventTicketType {
  id               String            @id @default(cuid())
  eventId          String
  name             String
  description      String?
  type             String
  price            Float             @default(0)
  minDonation      Float?
  maxDonation      Float?
  quantity         Int?
  quantitySold     Int               @default(0)
  salesStart       DateTime?
  salesEnd         DateTime?
  hidden           Boolean           @default(false)
  requiresApproval Boolean           @default(false)
  order            Int               @default(0)
  active           Boolean           @default(true)
  Event            Event             @relation(fields: [eventId], references: [id], onDelete: Cascade)
  EventTicket      EventTicket[]
  applicablePromos PromoCodeTicket[]
}

model EventOrder {
  id              String        @id @default(cuid())
  eventId         String
  orderNumber     String        @unique
  customerName    String
  customerEmail   String
  customerPhone   String?
  totalAmount     Float
  subtotal        Float
  taxAmount       Float         @default(0)
  feeAmount       Float         @default(0)
  discountAmount  Float         @default(0)
  promoCode       String?
  status          String
  paymentMethod   String
  paymentId       String?
  razorpayOrderId String?
  notes           String?
  customFields    String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  Event           Event         @relation(fields: [eventId], references: [id], onDelete: Cascade)
  tickets         EventTicket[]
}

model EventTicket {
  id            String          @id @default(cuid())
  eventId       String
  ticketTypeId  String
  orderId       String
  attendeeName  String
  attendeeEmail String
  attendeePhone String?
  qrCode        String
  price         Float
  status        String          @default("valid")
  checkInStatus String          @default("pending")
  checkInTime   DateTime?
  checkInBy     String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  Event         Event           @relation(fields: [eventId], references: [id], onDelete: Cascade)
  ticketType    EventTicketType @relation(fields: [ticketTypeId], references: [id])
  order         EventOrder      @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

model EventPromoCode {
  id                String            @id @default(cuid())
  eventId           String
  code              String
  description       String?
  discountType      String
  discountValue     Float
  maxUses           Int?
  usedCount         Int               @default(0)
  validFrom         DateTime?
  validUntil        DateTime?
  minOrderAmount    Float?
  active            Boolean           @default(true)
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  Event             Event             @relation(fields: [eventId], references: [id], onDelete: Cascade)
  applicableTickets PromoCodeTicket[]
}

model PromoCodeTicket {
  id           String          @id @default(cuid())
  promoCodeId  String
  ticketTypeId String
  promoCode    EventPromoCode  @relation(fields: [promoCodeId], references: [id], onDelete: Cascade)
  ticketType   EventTicketType @relation(fields: [ticketTypeId], references: [id], onDelete: Cascade)

  @@unique([promoCodeId, ticketTypeId])
}
